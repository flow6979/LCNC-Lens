{
  "manifest_version": 3,
  "name": "LCNC Lens",
  "version": "1.0",
  "description": "Calls the copilot API with custom headers and body.",
  "permissions": ["storage", "cookies", "tabs", "webRequest"],
  "host_permissions": [
    "https://github.com/*",
    "https://www.zenduty.com/*",
    "https://low-code-preprod.bsstag.com/*",
    "https://lcnc-api-preprod.bsstag.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/lcnc_logo.jpeg",
      "32": "assets/lcnc_logo.jpeg",
      "48": "assets/lcnc_logo.jpeg",
      "128": "assets/lcnc_logo.jpeg"
    }
  },
  "icons": {
    "16": "assets/lcnc_logo.jpeg",
    "32": "assets/lcnc_logo.jpeg",
    "48": "assets/lcnc_logo.jpeg",
    "128": "assets/lcnc_logo.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["https://www.zenduty.com/*"],
      "js": ["content.js"]
    }
  ]
}
